<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
   >

    <LinearLayout
        android:id="@+id/linearDialogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textStyle="bold"
            android:textSize="12sp"
            android:padding="8dp" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"

            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtDiagDescripcionTipoLavado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/exo_2"
            tools:text="Descripción del tipo de lavado" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio"
            android:textStyle="bold"
            android:textSize="12sp"
            android:padding="8dp" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/txtDiagDescripcionTipoLavado" />

        <TextView
            android:id="@+id/precioTipoLavadoDialogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Precio del tipo de lavado"
            android:layout_margin="10dp"
            android:textSize="30sp"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona tu vehículo"
            android:textStyle="bold"
            android:textSize="12sp"
            android:padding="8dp" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/txtDiagDescripcionTipoLavado" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerDialogoVehiculos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_vehiculos"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>